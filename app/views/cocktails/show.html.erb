<h3><%= @cocktail.name %></h3>

<%= link_to 'add a new ingredient', new_cocktail_dose_path(@cocktail) %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> <%= dose.ingredient.name.downcase %>
      <%= dose.details %>
      <%= link_to 'delete', dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<%= @cocktail.directions %>

<%= image_tag @cocktail.image_url %>
